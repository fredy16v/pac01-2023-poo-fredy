@model Alumno

@{
	ViewData["Title"] = "Home Page";
}

<div class="row justify-content-center">
	<div class="card w-50">
		<div class="card-body">
			<h2 class="text-center mt-3">Alumno Nuevo</h2>
			<form class="row align-self-center gap-2" method="post" asp-action="Crear">
				<div class="row flex-nowrap justify-content-start position-relative ">
					<input class="custom-input" name="Nombre" type="text" asp-for="Nombre" placeholder="Nombre" />
					@Html.ValidationMessageFor(model => model.Nombre, message:"", new {@class = "text-danger error-messaje"})
				</div>

				<div class="row flex-nowrap justify-content-start position-relative">

					<input class="custom-input" type="text" asp-for="Apellido" name="Apellido" placeholder="Apellido" />
					@Html.ValidationMessageFor(model => model.Apellido, message:"", new {@class = "text-danger error-messaje"})
				</div>

				<div class="row flex-nowrap justify-content-start position-relative">

					<input class="custom-input" type="text" name="NumeroDeCuenta" asp-for="NumeroDeCuenta" placeholder="Numero de Cuenta" />
					@Html.ValidationMessageFor(model => model.NumeroDeCuenta, message:"", new {@class = "text-danger error-messaje"})
				</div>
				<div for="Presente">
					@Html.CheckBoxFor(model => model.Presente)
				</div>
				<div class="row mt-3">
					<div class="col">
						<button class="btn btn-primary custom-button" type="submit">Enviar</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>

