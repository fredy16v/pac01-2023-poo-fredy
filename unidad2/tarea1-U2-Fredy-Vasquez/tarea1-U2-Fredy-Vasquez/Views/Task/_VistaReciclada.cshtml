@model Tarea

<div class="row justify-content-center">
    <div class="w-50">
        <h2 class="text-center">@ViewData["Text"] Tarea</h2>
        <img src="~/Images/Imagen banner.jpg" alt="baner" style="height: 130px; width: 515px;"/>
        <form method="post" asp-action="@ViewData["Action"]" class="row align-self-center">
            <div class="row">
                <label class="form-label" for="Titulo">Titulo</label>
                <input class="form-control" asp-for="Titulo" type="text" />
                @Html.ValidationMessageFor(model => model.Titulo, message:"", new {@class = "text-danger"})
            </div>

            <div class="row">
                <label class="form-label" for="Descripcion">Descripcion</label>
                <textarea class="form-control" asp-for="Descripcion" type="text"></textarea>
                @Html.ValidationMessageFor(model => model.Descripcion, message:"", new {@class = "text-danger"})
            </div>

            <div class="row">
                <label class="form-label" for="FechaDeVencimiento">Fecha de Vencimiento</label>
                <input class="form-control" asp-for="FechaDeVencimiento" type="datetime-local" />

                @if (Html.ViewContext.ModelState["FechaDeVencimiento"]?.Errors[0].ErrorMessage != null)
                {
                    @Html.ValidationMessageFor(model => model.FechaDeVencimiento, "Inserte la fecha de la tarea.", new {@class = "text-danger"})
                }
                
            </div>

            <div class="row mt-3">
                <button class="btn btn-primary" type="submit">@ViewData["Text"]</button>
            </div>
        </form>
    </div>
</div>