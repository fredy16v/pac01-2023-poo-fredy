@model NumeroTelefono

<style>
	.custom-card {
		border-radius: 40px;
		background: #ecf0f3;
		box-shadow: 10px 10px 14px #909294, -10px -10px 14px #ffffff;
	}

	.custom-logo {
		width: 60px;
		height: 60px;
		border-radius: 50%;
		margin: auto;
		text-align: center;
		display: flex;
		justify-content: center;
		align-items: center;
		box-shadow: 0px 0px 2px #5f5f5f, 0px 0px 0px 5px #ecf0f3, 10px 10px 14px #a7aaaf, -10px -10px 14px #ffffff;
	}

	.custom-input {
		height: 40px;
		border: none;
		outline: none;
		background: none;
		font-size: 14px;
		margin: 5px 2.5px;
		padding-left: 2.5rem;
		border-radius: 30px;
		background: #ecf0f3;
		box-shadow: inset 10px 10px 10px #b1b4b6, inset -10px -10px 10px #ffffff;
		position: relative;
	}

	.svg {
		height: 20px;
	}

	.icono {
		position: absolute;
		display: block;
		width: 20px;
		z-index: 3;
		align-self: center;
		margin-left: 0.3rem;
		margin-top: 0.3rem;
		margin-bottom: 0.5rem;
	}

	.custom-button {
		outline: none;
		border: none;
		cursor: pointer;
		width: 100%;
		height: 50px;
		border-radius: 30px;
		background: blue;
		box-shadow: 5px 5px 6px #b3b6b9, -5px -5px 6px #ffffff;
	}

	.error-messaje {
		position: absolute;
		bottom: -0.9rem;
		left: 1rem;
		z-index: 3;
	}
</style>

<div class="row justify-content-center">
	<div class="custom-card card w-50">
		<div class="card-body">
			<div class="custom-logo">
				<img src="~/imagenes/AddContacto.gif" alt="Icono Añadir Contacto" width="60" height="60" />
			</div>
			<h2 class="text-center mt-3">@ViewData["Text"] Contacto </h2>
			<form class="row align-self-center gap-2" method="post" asp-action="@ViewData["Action"]">
				<div class="row flex-nowrap justify-content-start position-relative ">
					<span class="icono ">
						<svg class="svg" viewBox="0 0 20 20">
							<path d="M12.075,10.812c1.358-0.853,2.242-2.507,2.242-4.037c0-2.181-1.795-4.618-4.198-4.618S5.921,4.594,5.921,6.775c0,1.53,0.884,3.185,2.242,4.037c-3.222,0.865-5.6,3.807-5.6,7.298c0,0.23,0.189,0.42,0.42,0.42h14.273c0.23,0,0.42-0.189,0.42-0.42C17.676,14.619,15.297,11.677,12.075,10.812 M6.761,6.775c0-2.162,1.773-3.778,3.358-3.778s3.359,1.616,3.359,3.778c0,2.162-1.774,3.778-3.359,3.778S6.761,8.937,6.761,6.775 M3.415,17.69c0.218-3.51,3.142-6.297,6.704-6.297c3.562,0,6.486,2.787,6.705,6.297H3.415z"></path>
						</svg>
					</span>
					<input class="custom-input" name="Nombre" type="text" asp-for="Nombre" placeholder="Nombre" />
					
					@Html.ValidationMessageFor(model => model.Nombre, message:"", new {@class = "text-danger error-messaje"})
				</div>

				<div class="row flex-nowrap justify-content-start position-relative">
					<span class="icono">
						<svg class="svg" viewBox="0 0 20 20">
							<path d="M15.573,11.624c0.568-0.478,0.947-1.219,0.947-2.019c0-1.37-1.108-2.569-2.371-2.569s-2.371,1.2-2.371,2.569c0,0.8,0.379,1.542,0.946,2.019c-0.253,0.089-0.496,0.2-0.728,0.332c-0.743-0.898-1.745-1.573-2.891-1.911c0.877-0.61,1.486-1.666,1.486-2.812c0-1.79-1.479-3.359-3.162-3.359S4.269,5.443,4.269,7.233c0,1.146,0.608,2.202,1.486,2.812c-2.454,0.725-4.252,2.998-4.252,5.685c0,0.218,0.178,0.396,0.395,0.396h16.203c0.218,0,0.396-0.178,0.396-0.396C18.497,13.831,17.273,12.216,15.573,11.624 M12.568,9.605c0-0.822,0.689-1.779,1.581-1.779s1.58,0.957,1.58,1.779s-0.688,1.779-1.58,1.779S12.568,10.427,12.568,9.605 M5.06,7.233c0-1.213,1.014-2.569,2.371-2.569c1.358,0,2.371,1.355,2.371,2.569S8.789,9.802,7.431,9.802C6.073,9.802,5.06,8.447,5.06,7.233 M2.309,15.335c0.202-2.649,2.423-4.742,5.122-4.742s4.921,2.093,5.122,4.742H2.309z M13.346,15.335c-0.067-0.997-0.382-1.928-0.882-2.732c0.502-0.271,1.075-0.429,1.686-0.429c1.828,0,3.338,1.385,3.535,3.161H13.346z"></path>
						</svg>
					</span>
					<input class="custom-input" type="text" name="Apellido" asp-for="Apellido" placeholder="Apellido" />
					@Html.ValidationMessageFor(model => model.Apellido, message:"", new {@class = "text-danger error-messaje"})
				</div>

				<div class="row flex-nowrap justify-content-start position-relative">
					<span class="icono">
						<svg class="svg" viewBox="0 0 20 20">
							<path d="M13.372,1.781H6.628c-0.696,0-1.265,0.569-1.265,1.265v13.91c0,0.695,0.569,1.265,1.265,1.265h6.744c0.695,0,1.265-0.569,1.265-1.265V3.045C14.637,2.35,14.067,1.781,13.372,1.781 M13.794,16.955c0,0.228-0.194,0.421-0.422,0.421H6.628c-0.228,0-0.421-0.193-0.421-0.421v-0.843h7.587V16.955z M13.794,15.269H6.207V4.731h7.587V15.269z M13.794,3.888H6.207V3.045c0-0.228,0.194-0.421,0.421-0.421h6.744c0.228,0,0.422,0.194,0.422,0.421V3.888z"></path>
						</svg>
					</span>
					<input class="custom-input" type="text" name="Numero" asp-for="Numero" placeholder="Numero" />
					@Html.ValidationMessageFor(model => model.Numero, message:"", new {@class = "text-danger error-messaje"})
				</div>

				<div class="row flex-nowrap justify-content-start position-relative">
					<span class="icono">
						<svg class="svg" viewBox="0 0 20 20">
							<path d="M18.121,9.88l-7.832-7.836c-0.155-0.158-0.428-0.155-0.584,0L1.842,9.913c-0.262,0.263-0.073,0.705,0.292,0.705h2.069v7.042c0,0.227,0.187,0.414,0.414,0.414h3.725c0.228,0,0.414-0.188,0.414-0.414v-3.313h2.483v3.313c0,0.227,0.187,0.414,0.413,0.414h3.726c0.229,0,0.414-0.188,0.414-0.414v-7.042h2.068h0.004C18.331,10.617,18.389,10.146,18.121,9.88 M14.963,17.245h-2.896v-3.313c0-0.229-0.186-0.415-0.414-0.415H8.342c-0.228,0-0.414,0.187-0.414,0.415v3.313H5.032v-6.628h9.931V17.245z M3.133,9.79l6.864-6.868l6.867,6.868H3.133z"></path>
						</svg>
					</span>
					<input class="custom-input" type="text" name="NumeroTelFijo" asp-for="NumeroTelFijo" placeholder="Numero de Telefono Fijo" />
				</div>

				<div class="row flex-nowrap justify-content-start position-relative">
					<span class="icono">
						<svg class="svg" viewBox="0 0 20 20">
							<path d="M17.283,5.549h-5.26V4.335c0-0.222-0.183-0.404-0.404-0.404H8.381c-0.222,0-0.404,0.182-0.404,0.404v1.214h-5.26c-0.223,0-0.405,0.182-0.405,0.405v9.71c0,0.223,0.182,0.405,0.405,0.405h14.566c0.223,0,0.404-0.183,0.404-0.405v-9.71C17.688,5.731,17.506,5.549,17.283,5.549 M8.786,4.74h2.428v0.809H8.786V4.74z M16.879,15.26H3.122v-4.046h5.665v1.201c0,0.223,0.182,0.404,0.405,0.404h1.618c0.222,0,0.405-0.182,0.405-0.404v-1.201h5.665V15.26z M9.595,9.583h0.81v2.428h-0.81V9.583zM16.879,10.405h-5.665V9.19c0-0.222-0.183-0.405-0.405-0.405H9.191c-0.223,0-0.405,0.183-0.405,0.405v1.215H3.122V6.358h13.757V10.405z"></path>
						</svg>
					</span>
					<input class="custom-input" type="text" name="NumeroTelTrabajo" asp-for="NumeroTelTrabajo" placeholder="Numero de Telefono de Trabajo" />
				</div>

				<div class="row flex-nowrap justify-content-start position-relative">
					<span class="icono">
						<svg class="svg" viewBox="0 0 20 20">
							<path d="M17.388,4.751H2.613c-0.213,0-0.389,0.175-0.389,0.389v9.72c0,0.216,0.175,0.389,0.389,0.389h14.775c0.214,0,0.389-0.173,0.389-0.389v-9.72C17.776,4.926,17.602,4.751,17.388,4.751 M16.448,5.53L10,11.984L3.552,5.53H16.448zM3.002,6.081l3.921,3.925l-3.921,3.925V6.081z M3.56,14.471l3.914-3.916l2.253,2.253c0.153,0.153,0.395,0.153,0.548,0l2.253-2.253l3.913,3.916H3.56z M16.999,13.931l-3.921-3.925l3.921-3.925V13.931z"></path>
						</svg>
					</span>
					<input class="custom-input" type="text" name="Correo" asp-for="Correo" placeholder="Correo" />
				</div>

				<div class="row mt-3">
					<div class="col">
						<button class="btn btn-primary custom-button" type="submit">@ViewData["Text"]</button>
					</div>
					<div class="col">
						<a asp-controller="Home" asp-action="Index">
							<button class="btn btn-primary custom-button" type="button">Cancelar</button>
						</a>

					</div>
				</div>
			</form>
		</div>
	</div>
</div>