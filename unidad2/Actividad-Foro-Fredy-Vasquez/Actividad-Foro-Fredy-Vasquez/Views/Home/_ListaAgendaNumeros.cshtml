@model IEnumerable<NumeroTelefono>

<style>
	.custom-card {
		width: 369px;
		border-radius: 16px;
		background: #e0e0e0;
		box-shadow: 10px 10px 20px #b1b1b1, -10px -10px 20px #ffffff;
	}

	.custom-button {
		border: none;
		border-radius: 16px;
		box-shadow: 5px 5px 5px #293d5e, -5px -5px 5px #ffffff;
	}
	.icono {
		display: block;
		z-index: 3;
		margin-left: 9.1rem;
		width: 50px;
		height: 50px;
		border-radius: 50%;
		margin: auto;
		text-align: center;
		display: flex;
		justify-content: center;
		align-items: center;
		box-shadow: 0px 0px 2px #5f5f5f, 0px 0px 0px 5px #ecf0f3, 10px 10px 14px #a7aaaf, -10px -10px 14px #ffffff;
	}

</style>

@if (Model.Count() != 0)
{
	<div class="row justify-content-center justify-content-lg-start mt-3 gap-3">
		@foreach (NumeroTelefono numeroTelefono in Model)
		{
			<div class="custom-card card col-4 p-0" style="min-width: 18rem">
				<div class="card-body">
					<img class="icono" src="~/imagenes/IconoPerfil.gif" alt="Icono de usuario"/>
					<h5 class="card-title text-center mt-1">@numeroTelefono.Nombre @numeroTelefono.Apellido</h5>
					<h6 class="card-subtitle mb-2 text-center">@numeroTelefono.Numero</h6>
					<h6 class="card-subtitle mb-2 text-center">@numeroTelefono.NumeroTelFijo</h6>
					<h6 class="card-subtitle mb-2 text-center">@numeroTelefono.NumeroTelTrabajo</h6>
					<h6 class="card-subtitle text-center">@numeroTelefono.Correo</h6>
				</div>
				<div>
					<div class="row justify-content-center mb-2">
						<div class="col-3">
							<a href="Home/Editar/@numeroTelefono.Id">
								<button class="btn btn-primary custom-button" type="button" style="width: fit-content">Editar</button>
							</a>
						</div>
						<div class="col-3">
							<a href="Home/EliminarContacto/@numeroTelefono.Id">
								<button class="btn btn-danger custom-button" type="button" style="width: fit-content">Eliminar</button>
							</a>
						</div>
					</div>

				</div>
			</div>
		}
	</div>
}
else
{
	<p class="text-center">No hay ningun contacto para mostrar.</p>
}