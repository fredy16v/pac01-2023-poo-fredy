@model EditarTipoCuentaViewModel

@{
	ViewData["Title"] = "Editar Tipo de Cuenta";
}

<h1>@ViewData["Title"]</h1>

<h5>El tipo de cuenta se refiere a como se puede agrupar cuentas. Ejemplo: prestamos, tarjetas de credito, etc.</h5>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-controller="TiposCuenta" asp-action="Editar">
	<input asp-asp-for="Id" type="hidden" />

	<div class="mb-3">
		<label class="form-label" asp-for="Nombre"></label>
		<input asp-for="Nombre" class="form-control" placeholder="Nombre"/>
		<span asp-validation-for="Nombre" class="text-danger"></span>
	</div>

	<button class="btn btn-primary" type="submit">Guardar</button>
	<a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>